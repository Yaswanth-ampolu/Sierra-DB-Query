{
  "name": "sierra-db-query",
  "version": "1.0.0",
  "description": "Sierra DB Query - A Model Context Protocol (MCP) server for PostgreSQL database management",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "bin": {
    "sierra-db-query": "build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "start:http": "node build/index.js --http --port 7409",
    "client": "node client/server.js",
    "dev": "tsc -w",
    "dev:all": "npm run build && (npm run start:http & npm run client)",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "mcp",
    "database",
    "model-context-protocol",
    "ai",
    "sierra",
    "sql",
    "database-management"
  ],
  "author": {
    "name": "Yaswanth Ampolu",
    "email": "ampoluyaswanth2002@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yaswanth-ampolu/sierra-db-query.git"
  },
  "bugs": {
    "url": "https://github.com/Yaswanth-ampolu/sierra-db-query/issues"
  },
  "homepage": "https://github.com/Yaswanth-ampolu/sierra-db-query#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "commander": "^12.1.0",
    "express": "^4.21.0",
    "pg": "^8.16.3",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.10.2",
    "typescript": "^5.3.3"
  }
}
